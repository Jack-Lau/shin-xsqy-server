<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Appenders>
        <Console name="stdout" target="SYSTEM_OUT">
            <PatternLayout pattern="%d %-5p [%t] %c %m%n"/>
        </Console>
        <File name="file" fileName="mgxy-battle-executor.log" append="false">
            <PatternLayout pattern="%d %-5p [%t] %c %m%n"/>
        </File>
    </Appenders>
    <Loggers>
        <Logger name="io.github.azige" level="info" additivity="true">
            <AppenderRef ref="file"/>
            <AppenderRef ref="stdout"/>
        </Logger>
    </Loggers>
</Configuration>
